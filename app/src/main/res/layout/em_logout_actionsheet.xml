<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/em_btn_style_alert_dialog_background"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="退出后不会删除任何历史数据，下次登录依然可以使用本账号"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/em_btn_style_alert_dialog_special"
            android:gravity="center"
            android:onClick="logout"
            android:padding="6dp"
            android:text="退出登录"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <Button
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/em_btn_gray_selector"
            android:gravity="center"
            android:onClick="cancel"
            android:padding="6dp"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="19sp" />
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#f2f4f5">
    <!--<LinearLayout-->
    <!--    xmlns:android="http://schemas.android.com/apk/res/android"-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="match_parent"-->
    <!--    android:background="#FFF"-->
    <!--    android:orientation="vertical"-->
    <!--    >-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:orientation="vertical">
        <include layout="@layout/activity_title" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/z"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/setplace"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp" />
                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:background="@drawable/didian"
                    android:text="@string/a"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="88dp"
                    android:textColor="#838383"
                    android:textSize="25sp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="88dp" />


            </LinearLayout>


            <ImageButton
                android:id="@+id/exchange"
                android:layout_below="@+id/z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/jiantou"
                android:background="#FFF"
                android:text="转换"
                android:textColor="#838383"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textview2"
                android:layout_below="@+id/exchange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/didian"
                android:layout_marginTop="15dp"
                android:layout_marginStart="95dp"
                android:layout_marginEnd="88dp"
                android:text="@string/b"
                android:textColor="#838383"
                android:textSize="25sp"
                android:layout_marginLeft="95dp"
                android:layout_marginRight="88dp" />
            <TextView
                android:id="@+id/setid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textview2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:textSize="25dp"
                android:text="请选择上车点"/>
            <ImageView
                android:layout_below="@+id/setid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/xiahuaxian"
                android:layout_marginLeft="88dp"
                android:layout_marginRight="88dp"
                android:layout_centerHorizontal="true"

                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/settime"
                    android:layout_marginLeft="20dp" />
                <TextView
                    android:id="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="选择日期"
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_below="@+id/a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/xiahuaxian"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="88dp"
                    android:layout_centerHorizontal="true"

                    />
                <TextView
                    android:id="@+id/b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/a"
                    android:layout_marginTop="15dp"
                    android:textSize="15dp"
                    android:layout_toRightOf="@+id/a" />
                <TextView
                    android:id="@+id/c"
                    android:layout_below="@+id/a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:text="具体时间点"
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_below="@+id/c"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="88dp"
                    android:src="@drawable/xiahuaxian"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/setpeople"
                    android:layout_marginLeft="20dp" />
                <TextView
                    android:id="@+id/peoplenumble"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="搭乘人数"
                    android:textSize="20dp"/>
                <ImageView
                    android:layout_below="@+id/peoplenumble"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="88dp"
                    android:layout_marginRight="88dp"
                    android:src="@drawable/xiahuaxian"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>


        </LinearLayout>
        <Button
            android:id="@+id/sharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="30dp"
            android:text="发起组队"
            android:background="@drawable/button_circle_shape"/>
        <View style="@style/ViewLineNav"
            android:layout_marginBottom="30dp"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>